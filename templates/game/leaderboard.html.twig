{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row justify-content-center min-vh-100 align-items-center">
        <div class="row justify-content-center min-vh-100 align-items-center">
            <div class="col-12 col-md-8 text-center">

                <div class="list-group list-group-flush" data-bs-spy="scroll" data-bs-smooth-scroll="true"
                     class="scrollspy-leaderboard" tabindex="0">
                    <div class="list-group-item">
                        <h1 class="mb-3">Leaderboard</h1>
                        <div class="mb-3">{{ dailyWord.createdAt.toDate|format_date(dateFormat='long') }}</div>
                    </div>
                    {% for rank in ranking %}
                        <div id="{{ app.user.id }}"
                             class="list-group-item list-group-item-action {{ app.user.id == rank.id ? 'text-bg-success' }}">
                            <div class="fs-3 d-flex justify-content-between align-items-center">
                                <div>{{ loop.index }}.</div>
                                <div>{{ rank.username|title }} {{ rank.username == app.user.name ? "(You)" }} - {{ rank.time }}</div>
                                <span class="badge text-bg-dark rounded-pill">{{ rank.points|format_number }}</span>
                            </div>
                        </div>
                    {% else %}
                        <div class="list-group-item text-center text-muted">No one has solved it yet!</div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    {% endblock %}

    {% block title %}

    {% endblock %}

